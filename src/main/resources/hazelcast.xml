<hazelcast
	xsi:schemaLocation="http://www.hazelcast.com/schema/config hazelcast-config-3.5.xsd"
	xmlns="http://www.hazelcast.com/schema/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<group>
		<name>dev</name>
		<password>dev-pass</password>
	</group>
	<properties>
		<property name="property">theprop</property>
	</properties>
	<management-center enabled="false">http://localhost:8080/mancenter
	</management-center>

	<map name="MobilePushEventMap">
		<time-to-live-seconds>35</time-to-live-seconds>
		<max-idle-seconds>0</max-idle-seconds>
		<eviction-policy>LRU</eviction-policy>
		<max-size policy="PER_NODE">5000</max-size>
		<eviction-percentage>25</eviction-percentage>
		<min-eviction-check-millis>100</min-eviction-check-millis>
	</map>

	<network>
		<port auto-increment="true" port-count="100">5701</port>
		<outbound-ports>
			<ports>0</ports>
		</outbound-ports>
		<join>
			<multicast enabled="false" />
			<tcp-ip enabled="false" />
			<discovery-strategies>
				<discovery-strategy enabled="true"
					class="com.noctarius.hazelcast.kubernetes.HazelcastKubernetesDiscoveryStrategy">
					<properties>
						<property name="service-name">mobile-push-replicat-dataset</property>
						<property name="service-label-name">dataset</property>
						<property name="service-label-value">hazelcast-server</property>
						<property name="namespace">default</property>
					</properties>
				</discovery-strategy>
			</discovery-strategies>
		</join>
	</network>

</hazelcast>